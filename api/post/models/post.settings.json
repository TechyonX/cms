{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "publish_at": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft",
        "archived"
      ],
      "default": "draft",
      "private": false,
      "required": true
    }
  }
}
